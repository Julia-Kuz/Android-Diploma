<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RadioGroup
        android:id="@+id/radioGroup"
        android:checkedButton="@+id/radio_button_online"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="48dp">
        <RadioButton
            android:id="@+id/radio_button_online"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ONLINE"/>
        <RadioButton
            android:id="@+id/radio_button_offline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OFFLINE"/>
    </RadioGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/chooseDateTime"
        style="@style/Widget.AppTheme.LikeButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:contentDescription="Choose date"
        app:icon="@drawable/ic_calendar_month_48"
        app:iconSize="32dp"
        app:iconTint="@color/see"
        android:layout_weight="1"
        android:text="Choose the date &amp; time"
        android:textSize="16sp"
        android:textAlignment="viewStart"
        android:layout_margin="48dp"
       />

</LinearLayout>